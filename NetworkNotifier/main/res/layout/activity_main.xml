<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dsMM.NetworkNotifier.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check"
        android:id="@+id/btn_check_internet"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="demo_checkInternet"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/assign"
        android:id="@+id/btn_assign_job"
        android:layout_below="@+id/btn_check_internet"
        android:layout_marginTop="65dp"
        android:layout_alignEnd="@+id/btn_check_internet"
        android:layout_alignStart="@+id/btn_check_internet"
        android:onClick="assignJob"/>

</RelativeLayout>
