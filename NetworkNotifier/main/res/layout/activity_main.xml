<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dsMM.NetworkNotifier.MainActivity"
    android:id="@+id/rel_layout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check"
        android:id="@+id/btn_check_internet"
        android:onClick="demo_checkInternet"
        android:layout_below="@+id/btn_load"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:alpha="0.9"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/assign"
        android:id="@+id/btn_assign_job"
        android:onClick="assignJob"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.9"
        android:visibility="invisible"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="@string/load"
        android:id="@+id/btn_load"
        android:onClick="animationOp"
        android:layout_below="@+id/progressBar"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/btn_background"
        android:layout_toStartOf="@+id/progressBar"
        android:alpha="0.9"
        android:visibility="invisible"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/background"
        android:id="@+id/btn_background"
        android:onClick="notificationOp"
        android:layout_below="@+id/progressBar"
        android:layout_alignEnd="@+id/tableLayout2"
        android:layout_toEndOf="@+id/progressBar"/>

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Large.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:indeterminateBehavior="cycle"
        android:focusable="false"
        android:contextClickable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout2"
        android:layout_below="@+id/btn_check_internet"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:showDividers="beginning|none|middle|end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/give_username"
                android:id="@+id/textView4"
                android:layout_column="0"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/give_username"
                android:layout_column="1"
                android:gravity="right"
                android:layout_weight="1"
                android:textColor="#c62828"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/give_password"
                android:id="@+id/textView5"
                android:layout_column="0"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/give_password"
                android:layout_column="1"
                android:gravity="right"
                android:layout_weight="1"
                android:textColor="#c62828"/>
        </TableRow>
    </TableLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/btn_login"
        android:onClick="login"
        android:layout_below="@+id/tableLayout2"
        android:layout_alignEnd="@+id/tableLayout2"/>

</RelativeLayout>
